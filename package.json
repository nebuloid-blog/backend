		"standard-http-error": "^2.0.1",
		"toml": "^3.0.0",
		"ts-is-present": "^1.2.2"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^5.0.5",
		"@graphql-codegen/typescript": "^4.1.5",
		"@graphql-codegen/typescript-resolvers": "^4.4.4",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.0",
		"@types/ms": "^2",
		"@types/node": "^22.13.9",
		"@types/standard-http-error": "^2",
